{% extends 'base.html.twig' %}

{% block title %}Blogs{% endblock %}

{% block body %}
<div class="text-center">
    <h1>Blogs  </h1>
</div>
    <div class="d-flex flex-wrap">
        {% for blog in blogs %}
            <div class="card mr-2 mb-2 text-center" style="width: 18rem;">
                <div class="card-header text-white bg-info">
                    <h3 class="card-title">{{ blog.Title }}</h3>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><a href="{{ path('blogs_showAuthor', {'id': blog.author.id}) }}">{{ blog.author.firstname}}</a></h5>
                    <p class="card-text">{{ blog.Content }}</p>
                </div>
                <div class="card-footer text-muted">
                    <a href="{{ path('blogs_show', {'id': blog.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('blogs_edit', {'id': blog.id}) }}" class="btn btn-danger">edit</a>
                     <p class="card-text">{{ blog.date ? blog.date|date('Y-m-d H:i:s') : '' }}</p>
                </div>   
            </div>
        {% endfor %}
    </div>
{% endblock %}
